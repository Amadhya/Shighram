<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">@color/colorGradientPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="itemIconTint">@drawable/bottom_nav_color</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="colorPrimary">@color/colorWhite</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/gradient_bg</item>
    </style>
    <style name="CardText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_marginBottom">8sp</item>
        <item name="android:layout_marginLeft">12sp</item>
        <item name="android:layout_marginRight">12sp</item>
    </style>
</resources>
